<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:textSize="20sp"
        android:textColorHint="@color/green"
        android:id="@+id/mTvHouseNumber"
        android:textColor="@color/blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <TextView
        android:textColor="@color/blue"
        android:textColorHint="@color/green"
        android:textSize="20sp"
        android:id="@+id/mTvHouseSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <TextView
        android:textSize="20sp"
        android:textColorHint="@color/green"
        android:textColor="@color/blue"
        android:id="@+id/mTvHousePrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <ImageView
        android:id="@+id/imgHousePic"
        android:layout_width="match_parent"
        android:layout_height="206dp"
        app:srcCompat="@drawable/imgphotoo" />

    <Button
        android:id="@+id/mbtnDelete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00BCD4"
        android:text="Delete"
        android:textColor="#00ACC1"
        app:backgroundTint="#D40012" />

    <Button
        android:id="@+id/mbtnUpdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#43A047"
        android:text="Update"
        android:textColor="#8E24AA"
        app:backgroundTint="#43A047" />
</LinearLayout>